<div class="box1">
<h1>Books</h1>
<table>
<tr>
<th>Title</th>
<th>Body</th>
<th>　　</th>
</tr>

<% @books.each do |book| %>
<tr>
<td><span><%= book.title %></span></td>
<td><span><%= book.body %></span></td>

<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</table>

<!-- new index部分 -->
<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
<!-- errorメッセージ -->
<div class="error">
<% if @book.errors.any? %>
   <p><strong>error<br>
   can't be blank</strong></p>
<% end %>
</div>
<!-- errorメッセージここまで -->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="create-book">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>



</div>