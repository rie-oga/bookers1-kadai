<div class="box1">

<!-- success -->
<% if flash[:notice] %>
    <div class="flash">
       <%= flash[:notice] %>
    </div>
<% end %>

<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url: book_path(@book.id)) do |f| %>
<!-- errorメッセージ -->
<div class="error">
<% if @book.errors.any? %>
   <p><strong>error<br>
   can't be blank</strong></p>
<% end %>
</div>
<!-- errorメッセージここまで -->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="update-book">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</p>

</div>