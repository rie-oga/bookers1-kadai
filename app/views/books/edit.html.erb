<div class="box1">

<!-- success -->
<% if flash[:notice] %>
    <div class="flash">
       <%= flash[:notice] %>
    </div>
<% end %>

<h1>Editing Book</h1>
<!-- form_for部分 -->
<div class="error">
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
<%= form_for(@book, url: book_path(@book.id)) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="update-book">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</p>

</div>